<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="locationWithLists"
            type="grey.smarthouse.data.LocationWithLists" />

        <variable
            name="vm"
            type="grey.smarthouse.ui.mainScreen.locations.LocationVM" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorCustomMoreDark"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:cardCornerRadius="8dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@{locationWithLists.location.name}"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/buttonEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/location" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonClose"
                style="@style/Widget.SmartHouse.Button.TextButton.IconOnly"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:onClick="@{_ -> vm.deleteLocation(locationWithLists.location)}"
                app:icon="@drawable/ic_baseline_close_24"
                app:iconTint="@color/colorCustomText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEdit"
                style="@style/Widget.SmartHouse.Button.TextButton.IconOnly"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:onClick="@{_ -> vm.editLocation(locationWithLists.location.id)}"
                app:icon="@drawable/ic_baseline_edit_24"
                app:iconTint="@color/colorCustomText"
                app:layout_constraintEnd_toStartOf="@+id/buttonClose"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text='@{locationWithLists.sensors.size() > 0 ? String.format(@string/degree_with_digital_float, locationWithLists.sensors.get(0).value): ""}'
                    android:textSize="16sp"
                    android:visibility="@{locationWithLists.sensors.size() > 0 ? View.VISIBLE : View.GONE}"
                    app:drawableLeftCompat="@drawable/ic_termo"
                    tools:text="25,4 C" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text='@{locationWithLists.sensors.size() > 1 ? String.format(@string/percent_with_digital_float, locationWithLists.sensors.get(1).value): ""}'
                    android:textSize="16sp"
                    android:visibility="@{locationWithLists.sensors.size() > 1 ? View.VISIBLE : View.GONE}"
                    app:drawableLeftCompat="@drawable/ic_humy"
                    tools:text="62,5%" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</layout>