<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="CustomTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorCustomPrimary</item>
        <item name="colorPrimaryDark">@color/colorCustomDark</item>
        <item name="colorAccent">@color/colorCustomAccent</item>
        <item name="colorSecondary">@color/colorCustomAccent</item>
        <item name="android:textColor">@color/colorCustomText</item>
        <item name="android:textColorPrimary">@color/colorCustomText</item>
        <item name="android:textColorSecondary">#FF0000</item>
        <item name="colorControlNormal">@color/colorCustomText</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorCustomAccent</item>
        <item name="editTextStyle">@style/CustomEditText</item>
        <item name="alertDialogTheme">@style/CustomAlertDialog</item>
        <item name="dialogTheme">@style/CustomDialog</item>
        <item name="spinnerStyle">@style/CustomSpinner</item>
        <item name="android:windowBackground">@color/colorCustomDark</item>
        <item name="android:spinnerStyle">@style/SmartHouse.Widget.Spinner</item>
        <!--<item name="android:textColorHint">@color/colorCustomEditBgDisabled</item>-->
        <!--<item name="editTextBackground">@drawable/edit_text_style</item>-->
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/colorCustomMoreDark</item>
    </style>


    <style name="SmartHouse.Widget.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/colorCustomMoreDark</item>
    </style>


    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/bg_tablayout</item>
    </style>

    <style name="CustomEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_style</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>
    <style name="CustomButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomSpinner" parent="android:Widget.Spinner">
        <item name="android:popupBackground">@color/colorCustomDark</item>
        <item name="android:background">@color/colorCustomDark</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/colorCustomMoreDark</item>
    </style>


    <style name="Widget.SmartHouse.Button.TextButton.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="Widget.SmartHouse.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.SmartHouse.TextInputLayout.HintText
        </item>
        <item name="hintTextColor">@color/colorCustomText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/colorCustomAccent</item>
        <item name="android:textColorHint">@color/colorCustomAccent</item>
    </style>

    <style name="TextAppearance.SmartHouse.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">#FF0000</item>
    </style>
</resources>
